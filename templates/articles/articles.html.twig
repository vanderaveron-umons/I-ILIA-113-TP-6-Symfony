{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Liste des articles</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for article in articles %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{article.photo}}" class="card-img-top" width="350" height="250" alt="{{ article.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.nom }}</h5>
                            <p class="card-text">{{ article.prix }}</p>
                            <a href="{{path('detailsarticle', {'id' :article.id})}}" class="btn btn-success">Lire les d√©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


